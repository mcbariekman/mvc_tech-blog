const handlebars = require('handlebars');

const commentTemplate = `
{{! comment.handlebars }}

{{#each comments}}
<div class="comment">
  <p>User ID: {{user_id}}</p>
  <p>Post ID: {{post_id}}</p>
  <p>Comment: {{comment_text}}</p>
</div>
{{/each}}
`;

const commentData = [
  {
    user_id: 1,
    post_id: 5,
    comment_text: "Great job!"
  },
  // Rest of the comment data...
];

const compiledTemplate = handlebars.compile(commentTemplate);
const renderedHtml = compiledTemplate({ comments: commentData });

console.log(renderedHtml);
