{{> navbar}}

<div class="post">
  <h2>{{post.title}}</h2>
  <p>Created by: {{post.author.username}}</p>
  <p>Created on: {{post.date}}</p>
  <p>{{post.content}}</p>
</div>

{{#if loggedIn}}
  <form id="comment-form">
    <textarea id="comment-input" placeholder="Leave a comment"></textarea>
    <button type="submit">Submit Comment</button>
  </form>
{{else}}
  <p>Please <a href="/login">login</a> to leave a comment.</p>
{{/if}}

<div id="comments">
  <h3>Comments</h3>
  {{#each comments}}
    <div class="comment">
      <p>{{this.content}}</p>
      <p>By: {{this.author.username}}</p>
      <p>Created on: {{this.date}}</p>
    </div>
  {{/each}}
</div>

<script src="/js/post.js"></script>
